{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext"
        ],
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist_main",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/frontend/**/*",
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}